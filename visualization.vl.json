{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 800,
  "height": 600,
  "data": {
    "url": "https://raw.githubusercontent.com/Yixiannn/Visualisation-2/main/worldmap.topojson",
    "format": {"type": "topojson", "feature": "custom"}
  },
  "transform": [
    {
      "lookup": "properties.admin",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/Yixiannn/Visualisation-2/main/summary_data_clean.csv"
        },
        "key": "Country/Region",
        "fields": ["CumulativeTotalCases", "NumberOfDeaths", "Population"]
      }
    },
    {
      "calculate": "datum.CumulativeTotalCases/datum.Population*100",
      "as": "CasesPer100Population"
    }
  ],
  "projection": {"type": "equirectangular"},
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "field": "CasesPer100Population",
      "type": "quantitative",
      "scale": {
        "type": "threshold",
        "domain": [0, 50, 100],
        "range": ["#fdbe85", "#fd8d3c", "#e6550d", "#a63603"]
      }
    },
    "tooltip": [
      {
        "field": "properties.admin",
        "type": "nominal",
        "title": "Country/Refion"
      },
      {
        "field": "CumulativeTotalCases",
        "type": "quantitative",
        "title": "Cumulative Total Cases"
      },
      {"field": "Cases per 100 population", "type": "quantitative"}
    ]
  },
  "config": {}
}