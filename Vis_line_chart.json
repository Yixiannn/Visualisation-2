{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "data": {
    "url": "https://raw.githubusercontent.com/Yixiannn/Visualisation-2/main/Economic%20Growth%20rate%20in%20China.csv"
  },
  "width": "container",
  "encoding": {
    "x": {
      "field": "Year",
      "type": "nominal",
      "axis": {"labelAngle": 0},
      "sort": [
        "Q1 2002",
        "Q2 2002",
        "Q3 2002",
        "Q4 2002",
        "Q1 2003",
        "Q2 2003",
        "Q3 2003",
        "Q4 2003",
        "Q1 2004",
        "Q2 2004",
        "Q3 2004",
        "Q4 2004"
      ]
    },
    "y": {
      "field": "GrowthRate",
      "type": "quantitative",
      "title": "GDP Growth Rate"
    },
    "color": {"value": "darkgrey"},
    "tooltip": [
      {"field": "Year", "type": "ordinal"},
      {
        "field": "GrowthRate",
        "type": "quantitative",
        "title": "GDP Growth Rate"
      }
    ]
  },
  "layer": [
    {"mark": {"type": "line", "point": true}},
    {
      "mark": {
        "type": "text",
        "align": "center",
        "dx": 0,
        "dy": -8,
        "baseline": "bottom"
      },
      "encoding": {
        "color": {"value": "darkred"},
        "text": {
          "condition": {
            "test": {
              "field": "Year",
              "oneOf": ["Q4 2002", "Q1 2003", "Q2 2003", "Q3 2003", "Q4 2003"]
            },
            "field": "GrowthRate",
            "type": "quantitative"
          }
        }
      }
    }
  ],
  "config": {}
}